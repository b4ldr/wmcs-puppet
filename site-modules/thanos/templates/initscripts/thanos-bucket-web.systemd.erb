[Unit]
Description=Thanos bucket web viewer
Documentation=https://github.com/thanos-io/thanos

[Service]
Restart=always
User=thanos
ExecStart=/usr/bin/thanos tools bucket web --http-address <%= @http_address %> --objstore.config-file <%= @objstore_config_file %> --web.external-prefix=/bucket
ExecReload=/bin/kill -HUP $MAINPID
TimeoutStopSec=20s
SyslogIdentifier=%N

[Install]
WantedBy=multi-user.target

