<VirtualHost *:80>
    ServerName <%= @server_name %>
    ServerAdmin <%= @server_admin %>
    DocumentRoot /srv/org/wikimedia/design

    ServerSignature On

    LogLevel warn
    ErrorLog /var/log/apache2/<%= @server_name %>.error.log
    CustomLog /var/log/apache2/<%= @server_name %>.access.log wmf

    Alias "/style-guide" "/srv/org/wikimedia/design-style-guide"
    # T200304
    RedirectMatch 301 /style-guide/(w|wiki)/(.*) "/style-guide/"

    Alias "/strategy" "/srv/org/wikimedia/design-strategy"

    Alias "/blog" "/srv/org/wikimedia/design-blog/_site"

    <Directory />
        Options FollowSymLinks
        AllowOverride None
    </Directory>

    <Directory /srv/org/wikimedia/design>
        Options Indexes FollowSymLinks MultiViews
        AllowOverride None
        Require all granted
    </Directory>

    <Directory /srv/org/wikimedia/design-style-guide>
        Options Indexes FollowSymLinks MultiViews
        AllowOverride None
        Require all granted
    </Directory>

    <Directory /srv/org/wikimedia/design-strategy>
        Options Indexes FollowSymLinks MultiViews
        AllowOverride None
        Require all granted
    </Directory>

    <Directory /srv/org/wikimedia/design-blog/_site>
        Options Indexes FollowSymLinks MultiViews
        AllowOverride None
        Require all granted
    </Directory>

</VirtualHost>
