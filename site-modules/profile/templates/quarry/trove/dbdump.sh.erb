#!/bin/bash
# This file is managed by puppet. DO NOT EDIT
# create a DB backup with mysqldump and compress it
set -euo pipefail

DATESTRING=$(date +%Y%m%d)
/usr/bin/mysqldump --defaults-extra-file=/etc/dbdump.cfg --single-transaction quarry | /bin/gzip > <%= @backupdir%>/quarry_${DATESTRING}.sql.gz
