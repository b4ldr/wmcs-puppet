# Managed by Puppet

[auth]
netbox_token=<%= @nb_token %>
ganeti_user=<%= @ganeti_user %>
ganeti_password=<%= @ganeti_password %>
ca_cert=<%= @nb_ganeti_ca_cert %>

[netbox]
api=<%= @nb_api %>

<%  @nb_ganeti_profiles.each do |profile| -%>
[profile:<%= profile['profile'] %>]
api=https://<%= profile['url'] %>:<%= profile['port'] %>/
cluster=<%= profile['url'] %>
<% end %>
