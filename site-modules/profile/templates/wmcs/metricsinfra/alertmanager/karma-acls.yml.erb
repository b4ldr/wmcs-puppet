rules:
  - action: allow
    reason: metricsinfra admins can do everything
    scope:
      groups:
         - metricsinfra
      filters:
        - name_re: .+
          value_re: .+

  # TODO: add rules for each project, allowing
  # members of that project to do stuff
  # this will likely be done with the configurator, but not yet

  - action: block
    reason: Block unless explicitely allowed
    scope:
      filters:
        - name_re: .+
          value_re: .+
