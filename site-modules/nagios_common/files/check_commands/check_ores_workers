#!/bin/bash
# monitor ORES (T121656, T122830)

timestamp=$(/bin/date +%s)
pluginpath="/usr/lib/nagios/plugins"
host=$1
urlhost=$2
script=$(basename "$0")
user_agent="wmf-icinga/${script} (root@wikimedia.org)"

$pluginpath/check_http -f follow -H "$host" -I "$host" -A "${user_agent}" -S -u "http://${urlhost}/v3/scores/fakewiki/${timestamp}/"

