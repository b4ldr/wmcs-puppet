[Unit]
Description=Prometheus WMF Elasticsearch Exporter

[Service]
Restart=always
User=prometheus
ExecStart=/usr/local/bin/prometheus-wmf-elasticsearch-exporter \
    --listen :<%= @prometheus_port %> \
    --port <%= @elasticsearch_port %> \
    --indices <%= @indices_to_monitor.join(' ') %>

[Install]
WantedBy=multi-user.target
