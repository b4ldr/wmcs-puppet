<VirtualHost *:80>
    ServerName <%= @vhost %>

    # Disable golang debugging from outside localhost
    <Location /debug >
        Order allow,deny
        Allow from none
    </Location>

    # Disable quit/reload from outside localhost
    <LocationMatch ^/-/(quit|reload) >
        Order allow,deny
        Allow from none
    </LocationMatch>

    ProxyPass / http://localhost:<%= @listen_port %>/
</VirtualHost>
