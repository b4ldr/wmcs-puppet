[Unit]
Description=Varnish frontend Origin Servers Health
After=varnish<%= @instancesuffix %>.service
Requires=varnish<%= @instancesuffix %>.service

[Service]
ExecStart=/usr/local/bin/varnishospital <% if @instance_name and @instance_name != '' -%> --varnishd-instance-name <%= @instance_name %> <% end %>
Restart=always
RestartSec=5s
SyslogIdentifier=%N

[Install]
WantedBy=multi-user.target
