varnishtest "Range requests: convert into pass over a certain threshold"

server s1 {
    rxreq
    txresp -bodylen 20
    rxreq
    txresp -bodylen 20
} -start

varnish v1 -arg "-p vcl_path=${vcl_path} -p vcc_err_unref=false -p vcc_allow_inline_c=true -p cc_command='${cc_command}'" -vcl+backend {
    backend vtc_backend {
        .host = "${s1_addr}"; .port = "${s1_port}";
    }

    include "${basepath}/usr/share/varnish/tests/wikimedia_upload-frontend.vcl";
} -start

client c1 {
    # Range request over a certain threshold
    txreq -url "/test" -hdr "X-Forwarded-Proto: https" -hdr "Host: upload.wikimedia.org" -hdr "Range: bytes=999999999-"
    rxresp
    expect resp.status == 416
    expect resp.http.Content-Length == 0
}

client c1 -run
varnish v1 -expect s_pass == 1
varnish v1 -expect cache_hit == 0
# The request has been converted into pass, no object in cache
varnish v1 -expect n_object == 0

client c1 -run
varnish v1 -expect s_pass == 2
varnish v1 -expect cache_hit == 0
varnish v1 -expect n_object == 0
