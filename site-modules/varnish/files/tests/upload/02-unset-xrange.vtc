varnishtest "Clients are not allowed to specify X-Range"

server s1 {
    rxreq
    expect req.http.X-Range == <undef>
    expect req.http.X-Range-2 == "Yes"
    txresp
} -start

varnish v1 -arg "-p vcl_path=${vcl_path} -p vcc_err_unref=false -p vcc_allow_inline_c=true -p cc_command='${cc_command}'" -vcl+backend {
    backend vtc_backend {
        .host = "${s1_addr}"; .port = "${s1_port}";
    }

    include "${basepath}/usr/share/varnish/tests/wikimedia_upload-frontend.vcl";
} -start

client c1 {
    txreq -url "/banana" -hdr "X-Forwarded-Proto: https" -hdr "Host: upload.wikimedia.org" -hdr "X-Range: No" -hdr "X-Range-2: Yes"
    rxresp
    expect resp.status == 200
}

client c1 -run
