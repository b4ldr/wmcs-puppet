shell -bash
term xterm-256color

escape ^Aa
hardstatus alwayslastline
hardstatus string "%-w%{= BW}%50>%n %t%{-}%+w%<"

# Don't block output if the terminal stops responding(!)
defnonblock on

startup_message off

# escape space - run 'select', type in window number to change
bind ' ' select

# Unbind annoying keys
bind ^S # xoff
bind s
bind ^F # flow
bind f
bind h # hardcopy
