[Service]
# Hardening the metadb installation.
ProtectSystem=strict
ProtectHome=true
ProtectControlGroups=true
ProtectKernelModules=true
ProtectKernelTunables=true
NoNewPrivileges=true
PrivateTmp=true
PrivateDevices=true
ReadWritePaths=/etc/postgresql
ReadWritePaths=/var/lib/postgresql
ReadWritePaths=/var/log/postgresql
ReadWritePaths=/run/postgresql
ReadWritePaths=<%= @metadb_dir %>
InaccessiblePaths=/var/lib/puppet
CapabilityBoundingSet=CAP_SETUID CAP_SETGID
RestrictAddressFamilies=AF_UNIX AF_INET
RestrictNamespaces=true
